
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Book book = ViewBag.meomeo;
}

<body>
    <header>
        <h1>Giỏ hàng</h1>
    </header>
    <div class="container">

        <div class="item_cart"  style="display:flex">
            <div class="checkbox_cart" style="display:flex">
                    <input class="check_box" type="checkbox" id="myCheckbox">
            </div>
                
                <img class="img_pro_cart" style="display:flex"  src=" @book.getUrlImage()" alt="Ảnh sách">
    
            <div class="group-info" style="display:flex">
                <div class="namePro" > @book.getTitle() </div>
                <div class="tacGia"> @book.getAuthor()</div>
            </div>
            <div class"remote-cart" > xóa</div>
        </div>
        <a class="btn-add-to-muon" href="@Url.Action("Add", "YeuThich")">
            Mượn ngay
        </a>
    </div>
</body>

 <style>
    body {
        font-family: Arial, sans-serif;
    }

    header {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .item_cart {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        padding: 10px;
        border-radius: 10px;
        background-color: #f0f0f0;
    }

    .checkbox_cart {
        flex: 1;
        padding-right: 10px;
        margin-right: 10px;
    }
        .checkbox_cart check_box{
             justify-content: center;
             display:flex;
        }
    .img_pro_cart {
        flex: 2;
        height:150px;
        width: 350px;
    }

    .group-info {
        flex: 4;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding:20px;
    }

    .namePro {
        font-weight: bold;
        font-size: 18px;
        padding-bottom: 30px;
    }

    .tacGia {
        padding-top:30px;
    }

    .remote-cart {
        flex: 1;
        text-align: center;
        font-size: 18px;
        cursor: pointer;
        color: #ff0000;
    }

        .remote-cart:hover {
            text-decoration: underline;
        }

    .container a{
        
        bottom: 0;
        right: 0;
    }
    .btn-add-to-muon {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 18px;
        font-weight: bold;
    }

        .btn-add-to-muon:hover {
            background-color: #0056b3;
        }
</style>

        

