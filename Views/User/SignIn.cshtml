@model BookstoreProject.Dto.LoginDTO

@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">

                    <h5 class="card-title text-center">Đăng Ký</h5>
                    <div class="text-center text-danger">@ViewBag.Error</div>
                    <section id="loginForm">
                        @using (Html.BeginForm("SignIn", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-10">
                                    <p class="control-label">Tài khoản</p>
                                    <input asp-for="Account" class="form-control" />
                                    <span asp-validation-for="Account" class="text-danger" style="color:var(--primary-color)"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger" style="color:var(--primary-color)"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Đăng nhập" class="btn btn-default" style="color:var(--primary-color)" />
                                </div>
                            </div>
                            @* Enable this once you have account confirmation enabled for password reset functionality *@
                            <p>
                                @Html.ActionLink("Quên mật khẩu?", "ForgotPassword")
                            </p>
                        }

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
