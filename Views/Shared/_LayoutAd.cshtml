@using BookstoreProject.Firestore_Database;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Trang chủ - Admin</title>
    <link href="~/css/PagedList.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <style type="text/css">
        .menu1 {
            color: white;
            padding-left: 20px;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    @*  @{
    var u = Session["use"] as CNPM.Models.TaiKhoan;
    } *@

    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-success bg-danger">
        <h3>@Html.ActionLink("Trang chủ", "Index", "Admin", null, new { @class = "menu1" })</h3>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars" style=" font-size: 24px;"></i>
        </button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Search" aria-describedby="basic-addon2" />
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </form>

        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    @* <a class="dropdown-item" style="color:red" href="@Url.Action("Details", "TaiKhoans", new { id = u.MaNguoiDung  })"> Tài khoản : @u.Email</a> *@

                    <div class="dropdown-divider menu1"></div>
                    <a class="dropdown-item" href="/User/LogOut">ĐĂNG XUẤT</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading" style="color:red"> <h5>DANH SÁCH</h5></div>
                        <p style="font-size: 12px; padding: 10px;">QUẢN LÍ</p>
                        @if (BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.QUANLY) || BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.THUKHO))
                        {
                            <div style="padding-left: 20px;">
                                <a href="@Url.Action("BookManagement", "Admin")" style="color: white;">
                                    @* text-decoration: none; *@
                                    <i class="fas fa-book" style="margin-right: 5px;"></i>
                                    Quản lí sách
                                </a>
                            </div>

                        }
                        @if (BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.QUANLY) || BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.THUKHO))
                        {
                            <br />

                            <div style="padding-left: 20px;">
                                <a href="@Url.Action("Bookcopymanagement", "Admin")" style="color: white;">
                                    <i class="fas fa-copy" style="margin-right: 5px;"></i>
                                    Quản lí sách bản sao
                                </a>
                            </div>
                 
                        }
                        @if (BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.QUANLY) || BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.THUTHU))
                        {
                            <br />
                            <div style="padding-left: 20px;">
                                <a href="@Url.Action("Librarycardmanagement", "Admin")" style="color: white;">
                                    <i class="fas fa-address-card" style="margin-right: 5px;"></i>
                                    Quản lí thẻ
                                </a>
                            </div>
                        }
                        @if (BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.QUANLY) || BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.THUTHU))
                        {
                            <br />
                            <div style="padding-left: 20px;">
                                <a href="@Url.Action("AccountManagement", "Admin")" style="color: white;">
                                    <i class="fas fa-user" style="margin-right: 5px;"></i>
                                    Quản lí tài khoản
                                </a>
                            </div>
                        }
                        @if (BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.QUANLY) || BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.THUTHU))
                        {
                            <br />
                            <p style="font-size: 12px; padding: 10px;">CHỨC NĂNG</p>
                            <div style="padding-left: 20px;">
                                <a href="@Url.Action("Loanmanagement", "Admin")" style="color: white;">
                                    <i class="fas fa-newspaper" style="margin-right: 5px;"></i>
                                    Phiếu mượn
                                </a>
                            </div>
                        }
                        @if (BookstoreProjectDatabase.accountInfo.getRole().Equals(BookstoreProjectDatabase.QUANLY))
                        {
                            <br />
                            <p style="font-size: 12px; padding: 10px;">THỐNG KÊ</p>
                            <div style="padding-left: 20px;">
                                <a href="@Url.Action("ReportManagement", "Admin")" style="color: white;">
                                    <i class="fas fa-chart-line" style="margin-right: 5px;"></i>
                                    Thống kê chung
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <div class="sb-sidenav-footer menu1">
                    <div class="small">Đã đăng nhập :</div>
                    @* @u.PhanQuyen.TenQuyen *@
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">© 2023 công ty TNHH 10 đỉm</div>

                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/js/chart-area-demo.js"></script>
    <script src="~/js/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="~/js/datatables-demo.js"></script>
    @RenderSection("scripts", required: false)
</body>
@RenderSection("DoanJS", false)
</html>